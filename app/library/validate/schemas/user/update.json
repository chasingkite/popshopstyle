{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "format": "email"
        },
        "password": {
            "type": "string",
            "minLength": 5,
            "maxLength": 64
        },
        "avatar": {
            "anyOf": [
                { "type": "string", "format": "uri" },
                { "type": "null" }
            ]
        },
        "website": {
            "anyOf": [
                { "type": "string", "format": "uri" },
                { "type": "null" }
            ]
        },
        "about": {
            "anyOf": [
                { "type": "string", "maxLength": 256 },
                { "type": "null" }
            ]
        },
        "dateOfBirth": {
            "anyOf": [
                { "type": "number", "format": "time" },
                { "type": "null" }
            ]
        },
        "gender": {
            "anyOf": [
                { "type": "string", "enum": ["male", "female"] },
                { "type": "null" }
            ]
        },
        "name": {
            "type": "object",
            "properties": {
                "first": {
                    "anyOf": [
                        { "type": "string", "minLength": 0, "maxLength": 32 },
                        { "type": "null" }
                    ]
                },
                "last": {
                    "anyOf": [
                        { "type": "string", "minLength": 0, "maxLength": 32 },
                        { "type": "null" }
                    ]
                }
            }
        }
    }
}
