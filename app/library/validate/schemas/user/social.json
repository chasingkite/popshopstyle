{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "username",
        "email"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 5,
            "maxLength": 32
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "media": {
            "type": "object",
            "properties": {
                "avatar": {
                    "type": "string"
                }
            }
        },
        "social": {
            "type": "object",
            "properties": {
                "google": {
                    "type": "string"
                },
                "facebook": {
                    "type": "string"
                },
                "twitter": {
                    "type": "string"
                }
            }
        }
    }
}
