{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "username",
        "email",
        "password"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 5,
            "maxLength": 32
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "password": {
            "type": "string",
            "minLength": 5,
            "maxLength": 64
        },
        "avatar": {
            "type": "string",
            "format": "uri"
        }
    }
}
